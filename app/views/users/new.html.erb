<% provide(:title, '注册新用户') %>
<h1>注册新用户</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>	
	
	
      <%= f.label "输入用户名（不可重复）" %>
      <%= f.text_field :name %>

      <%= f.label "输入姓名" %>
      <%= f.text_field :namecn %>

      <%= f.label "输入密码" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "再次重复密码" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "保存", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>