<% provide(:title, "个人信息") %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <li><%= @user.name %>用户的信息：</li>
		<li>姓名：<%= @user.namecn %></li>
		<li>用户角色：<%= @user.role.name %></li>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.worklogs.any? %>
      <h3>日志数量 (<%= @user.worklogs.count %>)</h3>
      <ol class="worklogs">
        <%= render @worklogs %>
      </ol>
      <%= will_paginate @worklogs %>
    <% end %>
  </div>
</div>