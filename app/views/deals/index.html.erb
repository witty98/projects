<div class="row">	
	<h1>合同清单</h1>
	<section class="user_info col-md-10 col-md-offset-1">
	<h3>
		<%= link_to "新建收款记录" ,new_deal_path %> |
	</h3>
	<hr>	
	合同名称：<%= @contract.name %>
	<%= will_paginate @deals %>
	<table class="table table-striped table-bordered">
	  <tr>
		<th>收/付名称</th>
		<th>收/付类型</th>
		<th>计划金额</th>
		<th>实际金额</th>
		<th>签订时间</th>
		<th>修改</th>
	  </tr>
	  <% @deals.each do |deal| %>
		<%= render deal %>
	  <% end %>
	</table>
	<%= will_paginate @deals %>
    </section>

</div>