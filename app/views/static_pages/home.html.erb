<% provide(:title, "首页") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="worklog_form">
        <%= render 'shared/worklog_form' %>
      </section>
    </aside>
	
	<div class="col-md-7 col-md-offset-1">
		<%= render 'project'%>
		
		<%= render 'contract'%>
		
		<% if role_admin? %>
		   <%= render 'admin'%>
		<% else %>
			不是管理员
		<% end %>	

    </div>
  </div>
<% else %>
  <div class="center jumbotron">
  <h1>欢迎使用项目管理登记系统</h1>
    <h2>
      项目首页
    </h2>
  </div>
<% end %>